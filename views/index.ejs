<%- include('partials/header.ejs') %>

<link rel="stylesheet" href="styles/home.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<body>
    <section id="home">
        <h1>Welcome to <span>BlogDev</span>+</h1>
        <p>Be updated</p>
    </section>

    <section id="posts">
        <h2>Recent Posts</h2>
        <hr>
        <div class="post-container">
            <% if (posts.length > 0) { %>
                <% posts.forEach((post, index) => { %>
                    <div class="post-card">
                        <h4><%= post.title %></h4>
                        <p><%= post.text %></p>
                        <div class="edit-delete">
                            <form method="POST" action="/edit/<%= index %>">
                                <a href="/edit/<%= index %>" id="btn_edit"><i class="fa-solid fa-pencil"></i>Edit</a>
                            </form>
            
                            <form method="POST" action="/delete/<%= index %>">
                                <button type="submit" id="btn_delete"><i class="fa-solid fa-trash"></i>Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h4>Nothing yet.</h4>
            <% } %>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

<%- include('partials/footer.ejs') %>